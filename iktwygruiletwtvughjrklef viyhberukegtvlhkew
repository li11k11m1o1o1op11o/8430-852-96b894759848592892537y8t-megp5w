local humanoid = game.Players.LocalPlayer.Character:WaitForChild("Humanoid")
local original = game.Players.LocalPlayer.Character:WaitForChild("HumanoidRootPart")
local copy = original:Clone()
copy.Name = "NewHumanoidRootPart"
copy.CFrame = original.CFrame
copy.Position = original.Position

game.Players.LocalPlayer.Character.Humanoid.BreakJointsOnDeath = false

game.Players.LocalPlayer.Character.HumanoidRootPart.Name = "old"

local OldNameCall = nil

OldNameCall = hookmetamethod(game, "__namecall", function(Self, ...)
    local Args = {...}
    local NamecallMethod = getnamecallmethod()

    if not checkcaller() and Self == game and NamecallMethod == "copy" and Args[1] == "Name" then
        return "HumanoidRootPart"
    end

    return OldNameCall(Self, ...)
end)
